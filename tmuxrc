# === KEYBINDINGS ===
# command prefix
set -g prefix C-s
bind C-s send-prefix

# hotkeys
bind-key -n C-h choose-window
bind-key -n C-j next-window
bind-key -n C-k previous-window
bind-key -r k select-pane -U
bind-key -r j select-pane -D
bind-key -r h select-pane -L
bind-key -r l select-pane -R
bind-key . command-prompt 'rename-session %%'
bind-key c new-window -c "#{pane_current_path}"

# === MISCELLANEOUS ===
# zero based indexing
#set -g base-index 1

# escape time
set -s escape-time 0

# mouse
set -g mouse on

# Does not seem to work anymore with tmux 2.1, using custom new-window binding instead.
# set-option -g default-command $TMUX_DEFAULT_PATH
set -g default-terminal "screen-256color"

## Toggle mouse on with ^B m
bind a \
  set -g mouse on \;\
  display 'Mouse: ON'

# Toggle mouse off with ^B M
bind A \
  set -g mouse off \;\
  display 'Mouse: OFF'
